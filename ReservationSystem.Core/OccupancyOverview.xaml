        <TextBlock Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="2" Text="3-1-2022" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <TextBlock Grid.Column="8" Grid.Row="0" Grid.ColumnSpan="2" Text="4-1-2022" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <TextBlock Grid.Column="10" Grid.Row="0" Grid.ColumnSpan="2" Text="5-1-2022" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <TextBlock Grid.Column="12" Grid.Row="0" Grid.ColumnSpan="2" Text="6-1-2022" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <TextBlock Grid.Column="14" Grid.Row="0" Grid.ColumnSpan="2" Text="7-1-2022" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        
        <!--Reservations-->
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="Red" Grid.ColumnSpan="2"></Rectangle>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"  Text="Jante" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <Rectangle Grid.Column="3" Grid.Row="1" Fill="White" Grid.ColumnSpan="2"></Rectangle>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"  Text="Jante" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
        <Rectangle Grid.Column="5" Grid.Row="1" Fill="Green" Grid.ColumnSpan="2"></Rectangle>
        <TextBlock Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2"  Text="Frans" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25"></TextBlock>
    </Grid>
